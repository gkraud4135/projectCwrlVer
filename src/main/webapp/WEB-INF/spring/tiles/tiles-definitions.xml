<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE tiles-definitions PUBLIC
       "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
       "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">
<tiles-definitions>

	<!-- 메인 -->
	<definition name="main/*" extends="layout_template">
		<put-attribute name="contents" value="/WEB-INF/views/main/{1}.jsp" />
	</definition>

	<!-- 스크립트 패턴 연습 -->
	<definition name="pattern/*" extends="layout_template">
		<put-attribute name="contents" value="/WEB-INF/views/pattern/{1}.jsp" />
	</definition>

	<!-- 기타 페이지 -->
	<definition name="etc/*" extends="layout_template">
		<put-attribute name="contents" value="/WEB-INF/views/etc/{1}.jsp" />
	</definition>

</tiles-definitions>